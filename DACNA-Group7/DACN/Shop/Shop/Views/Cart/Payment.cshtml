@model List<Models.ViewModel.CartViewModel>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Shop.Common


<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        @{
            /**/

            var session = (UserLogin)Session[Shop.Common.Constants.USER_SESSION];
        }
        @if (session != null)
        {
            <div class="row">

                <div class="col-md-7">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Hóa đơn</h3>
                        </div>
                        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Người nhận</label>
                                <input name="shipName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Điện thoại</label>
                                <input name="phone" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input name="address" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input name="email" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary">Gửi đơn hàng</button>
                        }

                    </div>
                    <!-- /Billing Details -->
                    <!-- /Shiping Details -->
                    <!-- Order notes -->
                    <!-- /Order notes -->
                </div>

                <!-- Order Details -->
                <div class="col-md-5 order-details">
                    @if (Model.Count > 0)
                    {
                        <div class="section-title text-center">
                            <h3 class="title">Đơn hàng của bạn</h3>
                        </div>
                        <div class="order-summary">
                            <div class="order-col">
                                <div><strong>Sản phẩm</strong></div>
                                <div><strong>Thành tiền</strong></div>
                            </div>
                            @foreach (var item in Model)
                            {
                                <div class="order-products">
                                    <div class="order-col">
                                        <div>@item.Quantity  x @item.product.Name</div>
                                        <div>@(item.product.Price.GetValueOrDefault(0) * item.Quantity)</div>
                                    </div>
                                </div>
                            }
                            <div class="order-col">
                                <div>Phí giao hàng</div>
                                <div><strong>Miễn phí</strong></div>
                            </div>
                            <div class="order-col">
                                <div><strong>THÀNH TIỀN</strong></div>
                                <div><strong class="order-total">$@(Model.Sum(x => x.product.Price * x.Quantity)?.ToString("#,##"))</strong></div>
                            </div>
                        </div>



                    }
                </div>
                <!-- /Order Details -->
            </div>
            <!-- /row -->
        }
        else
        {
        <div class="alert alert-warning" role="alert">
            Bạn cần đăng nhập để có thể đặt hàng
        </div>
        }

    </div>
    <!-- /container -->
</div>
