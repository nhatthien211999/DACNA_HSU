@model List<Models.Model.Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Danh sách nhà cung cấp</h1>
            <div class="card mb-4">

                <div class="card-body">
                    @using (Html.BeginForm("Index", "Supplier", FormMethod.Get))
                    {
                        <div class="row ">
                            <div class="form-group">
                                <div class="col-md-8">
                                    <div class="col-md-4">

                                        <a href="/admin/Supplier/Create" class="btn btn-primary glyphicon glyphicon-plus">Thêm mới</a>
                                    </div>

                                </div>
                            </div>

                            <hr>
                            <div class="form-group">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" size="50" />
                                <button type="submit" class="btn btn-success"><i class="fas fa-search"></i></button>

                            </div>

                        </div>
                    }

                    <hr />
                    <div class="table-responsive">

                        <table class="table table-bordered" cellspacing="0">
                            <thead>
                                <tr>

                                    <th>Code</th>
                                    <th>Tên nhà cung cấp</th>
                                    <th>Địa chỉ</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>#</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                <tr id="row_@item.ID">
                                    <td>@item.Code</td>
                                    <td>@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>
                                        <a href="/admin/Supplier/Edit/@item.ID">Sửa</a>
                                        @Ajax.ActionLink("Xóa", "Delete",new {@id=item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bản có muốn xóa bản ghi này ?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </main>
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Your Website 2019</div>
                <div>
                    <a href="#">Privacy Policy</a>
                    &middot;
                    <a href="#">Terms &amp; Conditions</a>
                </div>
            </div>
        </div>
    </footer>

</div>

